<h1>New Post</h1>

<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :image, "Image URL" %>
    <%= form.text_field :image, class: "form-control", placeholder: "Enter the image URL here" %>
  </div>

  <div>
    <%= form.label :content, "Content" %>
    <%= form.text_area :content, class: "form-control", rows: 5 %>
  </div>

  <div>
    <%= form.submit 'Create Post', class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Back to Posts', posts_path, class: "btn btn-secondary" %>
