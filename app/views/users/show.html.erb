<h1 class="mb-4">Thông Tin Người Dùng</h1>
<div class="mb-4">
  <p><strong>Email:</strong> <%= @user.email_address %></p>
  <p><strong>Ngày Tạo:</strong> <%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></p>
</div>

<div class="d-flex gap-2">
  <!-- Nút "Chỉnh sửa" -->
  <%= link_to "Chỉnh sửa", edit_user_path(@user), class: "btn btn-warning btn-sm" %>

  <!-- Nút "Xóa tài khoản" -->
  <%= button_to "Xóa tài khoản", @user, 
                method: :delete, 
                class: "btn btn-danger btn-sm", 
                data: { turbo_confirm: "Bạn có chắc chắn muốn xóa tài khoản này?" } %>

  <!-- Nút "Quay lại" -->
  <%= link_to "Quay lại", users_path, class: "btn btn-secondary btn-sm" %>
</div>
