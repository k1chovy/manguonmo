<h1>Chỉnh sửa người dùng</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :email_address, "Email", class: "form-label" %>
    <%= form.text_field :email_address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, "Mật khẩu", class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, "Xác nhận mật khẩu", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Cập nhật", class: "btn btn-primary" %>
    <%= link_to "Hủy", users_path, class: "btn btn-secondary" %>
  </div>
<% end %>
